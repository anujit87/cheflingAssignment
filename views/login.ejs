
<% include partials/header %>

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-4 col-md-3"></div>
        <div class="col-sm-4 col-md-6 p-5 my-5">
            <h2 class="mb-4 text-center">Signin Page</h2>
            <div class="mt-2">
                <% errors.filter(error=>error.param==='fail').forEach(err=>{ %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= err.msg %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <% }) %>
            </div>
            <form action="/user/signin" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" placeholder="E-Mail" class="form-control">
                    <div class="mt-2">
                        <% errors.filter(error=>error.param==='email').forEach(err=>{ %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= err.msg %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <% }) %>
                    </div>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Password">
                    <div class="mt-2">
                        <% errors.filter(error=>error.param==='password').forEach(err=>{ %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= err.msg %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <% }) %>
                    </div>
                </div>
                <button type="submit" class="btn btn-block btn-primary">Login</button>
            </form>
        </div>
        <div class="col-sm-4 col-md-3"></div>
    </div>
</div>

<% include partials/footer %>